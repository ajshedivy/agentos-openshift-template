# ============================================================
# Database Configuration (Required)
# ============================================================
# PostgreSQL database URL (format: postgresql://user:password@host:port/database)
# For OpenShift, use the internal service name (e.g., postgresql:5432)
DATABASE_URL=postgresql://postgres:changeme@postgresql:5432/mcp

# ============================================================
# Cache Configuration (Required)
# ============================================================
# Redis cache URL (format: redis://host:port/db)
# For OpenShift, use the internal service name (e.g., redis:6379)
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=redis

# ============================================================
# MCP Server Integration (Required)
# ============================================================
# IBM i MCP Server URL
# For OpenShift, use the internal service name
MCP_SERVER_URL=http://ibmi-mcp-server:3010/mcp

# ============================================================
# JWT Authentication (Required)
# ============================================================
# JWT algorithm (HS256 for HMAC, RS256 for RSA)
JWT_ALGORITHM=HS256
# JWT secret key (for HMAC algorithms) - CHANGE THIS IN PRODUCTION
JWT_SECRET_KEY=your-secure-secret-key-change-in-production
# JWT issuer and audience
JWT_ISSUER=mcpgateway
JWT_AUDIENCE=mcpgateway-api

# ============================================================
# Platform Admin (Required)
# ============================================================
# Default platform admin credentials - CHANGE THESE IN PRODUCTION
PLATFORM_ADMIN_EMAIL=admin@example.com
PLATFORM_ADMIN_PASSWORD=changeme

# ============================================================
# Application Configuration (Optional)
# ============================================================
# Server host and port
HOST=0.0.0.0
PORT=4444
# Environment (development, staging, production)
ENVIRONMENT=production
# Enable features
EMAIL_AUTH_ENABLED=true
MCPGATEWAY_UI_ENABLED=true
MCPGATEWAY_ADMIN_API_ENABLED=true
# Security
SECURITY_HEADERS_ENABLED=true
CORS_ALLOW_CREDENTIALS=true
REQUIRE_TOKEN_EXPIRATION=false
